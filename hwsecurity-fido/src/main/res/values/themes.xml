<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HwSecurity.Fido.Dialog.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <!--<item name="android:textSize">12sp</item>-->
    </style>

    <style name="HwSecurity.Fido.Dialog.PinButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">#888</item>
        <item name="backgroundTint">#00ffffff</item>
        <item name="cornerRadius">64dp</item>
    </style>

    <style name="HwSecurity.Fido.Dialog.PinButton.Icon" parent="HwSecurity.Fido.Dialog.PinButton">
        <item name="iconTint">#000</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="HwSecurity.Fido.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/HwSecurity.Fido.BottomSheet.Modal</item>
    </style>

    <style name="HwSecurity.Fido.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_corners</item>
    </style>
</resources>